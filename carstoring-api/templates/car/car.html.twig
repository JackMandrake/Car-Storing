{% extends 'base.html.twig' %}

{% block title %}Liste des véhicules{% endblock %}

{% block body %}

<div class="d-flex flex-row justify-content-between container">
    <h2>Liste des Véhicules</h2>
    <div>
        <a href="{{ path('car_add') }}" class="btn btn-primary">Ajouter</a>
    </div>
</div>

<div class="list-group container">
    {% for car in cars %}
        <a href="{{ path('car_view', {'id': car.id}) }}" class="list-group-item list-group-item-action">
            {{ car.name }}
        </a>
    {% endfor %}
</div>




{% endblock %}
