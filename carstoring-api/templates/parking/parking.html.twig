{% extends 'base.html.twig' %}

{% block title %}Hello ParkingController!{% endblock %}

{% block body %}

<div class="d-flex flex-row justify-content-between container">
    <h2>Liste des Parkings</h2>
    <div>
        <a href="{{ path('parking_add') }}" class="btn btn-primary">Ajouter</a>
    </div>
</div>

<div class="list-group container">
    {% for parking in parkings %}
        <a href="{{ path('parking_view', {'id': parking.id}) }}" class="list-group-item list-group-item-action">
            {{ parking.name }}
        </a>
    {% endfor %}
</div>

{% endblock %}
